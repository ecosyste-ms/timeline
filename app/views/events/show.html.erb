<div class="px-4 pt-5 my-5 text-center">
  <h1 class="display-5 fw-bold">GH Timeline: <%= link_to @repository, "https://github.com/#{@repository}", target: :_blank %></h1>
</div>

<% if @events.any? %>
  <div class="container-sm">
    <%= render @events %>
  </div>

  <div class="px-4 my-5 text-center">
    <a href="<%= url_for(before: @events.last.id) %>" class="btn btn-primary btn-lg px-4 gap-3">Next</a>
  </div>
<% else %>
  <div class="px-4 my-5 text-center">
    No more events found
  </div>
<% end %>